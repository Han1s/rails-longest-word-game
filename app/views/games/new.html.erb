<h1>New game</h1>
<p><%= @letters %></p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="word formed from the letters">
  <!-- Can use a helper -->
  <input name="letters" type="hidden" value= "<%= @letters.join %>">
  <input name="start_time" type="hidden" value= "<%= Time.now %>">
  <input type="submit">
</form>
